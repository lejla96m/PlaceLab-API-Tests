						"reports",
						"data_extraction"
					],
					"query": [
						{
							"key": "name",
							"value": "API+Test+Report+{{$randomInt}}"
						},
						{
							"key": "country_code",
							"value": "US"
						},
						{
							"key": "file",
							"value": "@/C:/Users/Administrator/Downloads/data_extraction_sample"
						}
