					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"warning": "This is a duplicate header and will be overridden by the Authorization header generated by Postman.",
						"key": "Authorization",
						"value": "{{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": "/C:/Users/Administrator/Downloads/data_extraction_sample.txt"
						}
					]
				},
				"url": {
					"raw": "{{host}}/api/v2/reports/data_extraction?name=API+Test+Report+{{$randomInt}}&country_code=US&file=@/C:/Users/Administrator/Downloads/data_extraction_sample",
					"host": [
						"{{host}}"
					],
					"path": [
						"api",
